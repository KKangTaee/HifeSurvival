<?xml version="1.0" encoding="utf-8" ?>
<PDL>

  <packet name="C_JoinToGame">
    <string name ="userId"/>
    <string name ="userName"/>
  </packet>

  <packet name = "S_JoinToGame">
    <list name = "JoinPlayer">
      <string name = "userId"/>
      <string name = "userName"/>
      <int name = "id"/>
      <int name ="heroKey"/>
    </list>
    <int name="roomId"/>
  </packet>

  <packet name ="S_LeaveToGame">
    <string name = "userId"/>
    <int name ="id"/>
  </packet>

  <packet name="CS_SelectHero">
    <int name="id"/>
    <int name="heroKey"/>
  </packet>

  <packet name="CS_ReadyToGame">
    <int name ="id"/>
  </packet>

  <packet name="S_Countdown">
    <int name ="countdownSec"/>
  </packet>

  <packet name="S_StartGame">
    <int name ="playTimeSec"/>
    <class_PlayerSpawn_list name ="player"/>
    <class_MonsterSpawn_list name ="monster"/>
  </packet>

  <packet name ="S_SpawnMonster">
    <class_MonsterSpawn_list name ="monster"/>
  </packet>

  <packet name ="CS_Attack">
    <int name ="id"/>
    <int name ="targetId"/>
    <int name ="attackValue"/>
  </packet>
  
  <packet name ="MoveRequest">
    <int name ="id"/>
    <struct_PVec3 name ="currentPos"/>
    <struct_PVec3 name ="targetPos"/>
    <float name ="speed"/>
    <long name ="timestamp"/>
  </packet>

	<packet name = "MoveResponse">
		
	</packet>

  <packet name ="S_Dead">
    <int name  ="id"/>
    <int name  ="fromId"/>
    <int name  ="respawnTime"/>
  </packet>

  <packet name ="S_Respawn">
    <int name ="id"/>
    <struct_PVec3 name ="pos"/>
    <struct_PStat name ="stat"/>
  </packet>

	<packet name = "IncreaseStatRequest">
		<int name ="id"/>
		<int name ="type"/>
		<int name ="increase"/>
	</packet>

	<packet name = "IncreaseStatResponse">
		<int name ="id"/>
		<int name ="type"/>
		<int name ="increase"/>
		<int name ="usedGold"/>
		<struct_PStat name ="originStat"/>
		<struct_PStat name ="addStat"/>
		<int name="result"/>
	</packet>

  <packet name ="PickRewardRequest">
    <int name= "id"/>
    <int name= "worldId"/>
  </packet>

  <packet name ="PickRewardResponse">
    <int name ="id"/>
    <int name ="worldId"/>
    <int name="rewardType"/>
	  <int name ="gold"/>
    <int name ="itemSlotId"/>
    <struct_PItem name="item"/>
  </packet>

	<packet name ="UpdateRewardBroadcast">
		<int name ="worldId"/>
		<int name ="status"/>
		<int name="rewardType"/>
		<int name ="gold"/>
		<struct_PItem name="item"/>
		<struct_PVec3 name ="pos"/>
	</packet>

  <packet name ="UpdateLocationBroadcast">
    <int name ="id"/>
    <struct_PVec3 name ="currentPos"/>
    <struct_PVec3 name ="targetPos"/>
    <float name ="speed"/>
    <long name ="timestamp"/>
  </packet>

  <packet name ="UpdateStatBroadcast">
	  <int name ="id"/>
	  <struct_PStat name ="originStat"/>
	  <struct_PStat name ="addStat"/>
  </packet>

	<packet name ="UpdatePlayerCurrency">
		<int name ="id"/>
		<struct_PCurrency_list name ="currency"/>
	</packet>

	<struct name="PVec3">
    <float name ="x"/>
    <float name ="y"/>
    <float name ="z"/>
  </struct>

  <struct name ="PStat">
    <int name ="str"/>
    <int name ="def"/>
    <int name ="hp"/>
    <float name = "moveSpeed"/>
    <float name = "attackSpeed"/>
  </struct>

  <struct name = "PItem">
    <int name ="itemKey"/>
    <int name ="level"/>
    <int name ="str"/>
    <int name ="def"/>
    <int name ="hp"/>
    <int name ="cooltime"/>
    <bool name ="canUse"/>
  </struct>

	<struct name ="PCurrency">
		<int name ="currencyType"/>
		<int name ="count"/>
	</struct>

  <class name ="PlayerSpawn">
    <int name="id"/>
    <int name="herosKey"/>
    <struct_PVec3 name ="pos"/>
  </class>

  <class name ="MonsterSpawn">
    <int name="id"/>
    <int name ="monstersKey"/>
    <int name ="groupId"/>
    <int name ="grade"/>
    <struct_PVec3 name="pos"/>
  </class>

</PDL>