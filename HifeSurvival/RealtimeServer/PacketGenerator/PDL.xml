<?xml version="1.0" encoding="utf-8" ?>
<PDL>
	
	<packet name="C_JoinToGame">
		<string name ="userId"/>
		<string name ="userName"/>
	</packet>

	<packet name = "S_JoinToGame">
		<list name = "JoinPlayer">
			<string name = "userId"/>
			<string name = "userName"/>
			<int name = "targetId"/>
			<int name ="heroId"/>
		</list>
		<int name="roomId"/>
	</packet>

	<packet name ="S_LeaveToGame">
		<string name = "userId"/>
		<int name ="targetId"/>
	</packet>

	<packet name="CS_SelectHero">
		<int  name="targetId"/>
		<int  name="heroId"/>
	</packet>

	<packet name="CS_ReadyToGame">
		<int name ="targetId"/>
	</packet>

	<packet name="S_Countdown">
		<int name ="countdownSec"/>
	</packet>

	<packet name="S_StartGame">
		<list name="Player">
			<int name="targetId"/>
			<int name="heroId"/>
		</list>
		<list name="Monster">
			<int name ="targetId"/>
			<int name ="monsterId"/>
			<int name ="groupId"/>
			<int name ="subId"/>
		</list>
	</packet>

	<packet name ="CS_Attack">
		<bool name ="toIdIsPlayer"/>
		<int name ="toId"/>
		<int name ="fromId"/>
		<struct_Vec3 name ="fromPos"/>
		<struct_Vec3 name ="fromDir"/>
		<int name ="attackValue"/>
	</packet>

	<packet name ="CS_Move">
		<int name ="targetId"/>
		<bool name ="isPlayer"/>
		<struct_Vec3 name ="pos"/>
		<struct_Vec3 name ="dir"/>
		<float name ="speed"/>
	</packet>
	
	<packet name ="CS_StopMove">
		<int name ="targetId"/>
		<bool name ="isPlayer"/>
		<struct_Vec3 name ="pos"/>
		<struct_Vec3 name ="dir"/>
	</packet>
	
	<packet name ="S_Dead">
		<int name  ="toId"/>
		<int name  ="fromId"/>
		<bool name ="toIdIsPlayer"/>
		<int name  ="respawnTime"/>
	</packet>

	<packet name ="S_Respawn">
		<int name ="targetId"/>
		<bool name	="isPlayer"/>
		<struct_Vec3 name ="pos"/>
		<struct_Stat name ="stat"/>
	</packet>

	<packet name = "CS_UpdateStat">
		<int name ="targetId"/>
		<int name ="usedGold"/>
		<struct_Stat name ="updateStat"/>
	</packet>
	
	<struct name="Vec3">
		<float name ="x"/>
		<float name ="y"/>
		<float name ="z"/>
	</struct>

	<struct name ="Stat">
		<int name ="str"/>
		<int name ="def"/>
		<int name ="hp"/>
		<float name = "moveSpeed"/>
		<float name = "attackSpeed"/>
	</struct>
	
</PDL>